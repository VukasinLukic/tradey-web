{
  "name": "tradey-backend",
  "version": "1.0.0",
  "description": "TRADEY Backend API - Express + Firebase Admin",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:clean": "npm run kill-port && npm run dev",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "kill-port": "FOR /F \"tokens=5\" %P IN ('netstat -ano ^| findstr :5000') DO TaskKill /PID %P /F || echo Port 5000 is not in use",
    "export:firestore": "node scripts/export-firestore.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^13.1.0",
    "helmet": "^8.1.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.7",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3"
  }
}
